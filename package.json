{
  "name": "winget-releaser",
  "version": "1.0.0",
  "description": "Publish new releases of your application to Windows Package Manager easily.",
  "main": "out/main.js",
  "scripts": {
    "all": "npm run format && npm run build",
    "format": "prettier --write src *.* .github --ignore-unknown",
    "prebuild": "rmdir /s /q dist",
    "build": "tsc && ncc build --license licenses.txt",
    "postbuild": "rmdir /s /q out",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSameLine": true,
    "endOfLine": "lf",
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vedantmgoyal2009/winget-releaser.git"
  },
  "keywords": [
    "windows",
    "winget",
    "github-actions"
  ],
  "author": "Vedant",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/vedantmgoyal2009/winget-releaser/issues"
  },
  "homepage": "https://github.com/vedantmgoyal2009/winget-releaser#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "js-yaml": "^4.1.0",
    "simple-git": "^3.16.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.11.18",
    "@vercel/ncc": "^0.36.1",
    "prettier": "^2.8.3",
    "typescript": "^4.9.4"
  }
}
